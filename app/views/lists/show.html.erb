<!-- app/views/lists/show.html.erb -->
<div class="container mt-5">
  <h1><%= @list.name %></h1>

  <h2>Bookmarks</h2>
  <ul class="list-group">
    <% @bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <strong>Movie:</strong> <%= bookmark.movie.title %><br>
        <strong>Comment:</strong> <%= bookmark.comment %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
  <%= link_to 'Back to lists', lists_path, class: "btn btn-secondary mt-3" %>
</div>
