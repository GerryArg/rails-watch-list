<!-- app/views/lists/new.html.erb -->
<div class="container">
  <h1>Create a New Movie List</h1>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.button :submit, "Create List", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back to lists', lists_path, class: "btn btn-secondary mt-3" %>
</div>
