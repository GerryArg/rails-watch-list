<!-- app/views/bookmarks/new.html.erb -->
<div class="container mt-5">
  <h1>Add a new bookmark to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="mb-3">
      <%= f.association :movie, collection: Movie.all, label: "Select a movie", prompt: "Choose a movie" %>
    </div>
    <div class="mb-3">
      <%= f.input :comment %>
    </div>
    <div>
      <%= f.button :submit, "Add Bookmark", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back to list', list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
